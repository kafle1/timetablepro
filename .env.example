# Required Configuration
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1      # Your Appwrite endpoint
VITE_APPWRITE_PROJECT_ID=your-project-id                 # Your Appwrite project ID
VITE_APPWRITE_DATABASE_ID=your-database-id              # Your Appwrite database ID

# Optional Configuration
VITE_APP_NAME=TimeTablePro
VITE_APP_URL=http://localhost:5173

# Time Configuration
VITE_TIME_SLOT_START=08:00
VITE_TIME_SLOT_END=17:00
VITE_TIME_SLOT_DURATION=60
VITE_WORKING_DAYS=monday,tuesday,wednesday,thursday,friday

# Room Configuration
VITE_MIN_ROOM_CAPACITY=1
VITE_MAX_ROOM_CAPACITY=500
VITE_MIN_FLOOR=-5
VITE_MAX_FLOOR=100

# Password Requirements
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBER=true
VITE_PASSWORD_REQUIRE_SPECIAL=true
VITE_PASSWORD_SPECIAL_CHARS=!@#$%^&*

# Optional Configuration (with defaults)
VITE_APP_DESCRIPTION="Modern Timetable Management System"
VITE_TIME_SLOT_START=08:00                      # Daily schedule start time
VITE_TIME_SLOT_END=17:00                        # Daily schedule end time
VITE_TIME_SLOT_DURATION=60                      # Duration of each slot in minutes
VITE_WORKING_DAYS=monday,tuesday,wednesday,thursday,friday
VITE_MIN_ROOM_CAPACITY=1                        # Minimum allowed room capacity
VITE_MAX_ROOM_CAPACITY=500                      # Maximum allowed room capacity
VITE_MIN_FLOOR=-5
VITE_MAX_FLOOR=100

# UI Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_ANIMATIONS=true
VITE_TOAST_DURATION=5000

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_TEACHER_AVAILABILITY=true
VITE_ENABLE_ROOM_FEATURES=true
VITE_ENABLE_RECURRING_SCHEDULES=true

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_LIMIT_WINDOW=60000

# Cache Configuration
VITE_CACHE_DURATION=3600000
VITE_ENABLE_SERVICE_WORKER=true